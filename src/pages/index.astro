      </div>
    </section>
    <!-- CONTENT -->
  </main>
</IndexLayout>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const images = document.querySelectorAll<HTMLImageElement>(".parallax-bg");
    if (images.length) {
      // Create a simple parallax effect manually
      window.addEventListener("scroll", () => {
        const scrolled = window.scrollY;
        images.forEach((image) => {
          const speed = 0.5;
          image.style.transform = `translateY(${scrolled * speed}px)`;
        });
      });
    }

    // Crossfade background images
    const bgImages =
      document.querySelectorAll<HTMLImageElement>(".hero-bg-image");
    let current = 0;
    setInterval(() => {
      bgImages.forEach((img, idx) => {
        img.style.opacity = idx === current ? "1" : "0";
      });
      current = (current + 1) % bgImages.length;
    }, 4000); // Change every 4 seconds

    // Rubber band scroll effect for About Us section
    const aboutUsContent = document.getElementById("aboutUsContent");
    let lastScrollY = window.scrollY;
    let ticking = false;

    window.addEventListener("scroll", () => {
      lastScrollY = window.scrollY;
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const aboutUsSection = aboutUsContent?.closest("section");
          if (aboutUsSection) {
            const rect = aboutUsSection.getBoundingClientRect();
            if (rect.top < window.innerHeight && rect.bottom > 0) {
              const scrollProgress =
                (window.innerHeight - rect.top) / window.innerHeight;
              const translateY = Math.sin(scrollProgress * Math.PI) * 100;
              if (aboutUsContent) {
                aboutUsContent.style.transform = `translateY(${translateY}px)`;
              }
            }
          }
          ticking = false;
        });
        ticking = true;
      }
    });

    // Rubber band scroll effect for Business Areas section
    const businessAreasContent = document.getElementById(
      "businessAreasContent"
    );
    let businessAreasTicking = false;

    window.addEventListener("scroll", () => {
      if (!businessAreasTicking) {
        window.requestAnimationFrame(() => {
          const businessAreasSection = businessAreasContent?.closest("section");
          if (businessAreasSection) {
            const rect = businessAreasSection.getBoundingClientRect();
            if (rect.top < window.innerHeight && rect.bottom > 0) {
              const scrollProgress =
                (window.innerHeight - rect.top) / window.innerHeight;
              const translateY = Math.sin(scrollProgress * Math.PI) * 100;
              if (businessAreasContent) {
                businessAreasContent.style.transform = `translateY(${translateY}px)`;
              }
            }
          }
          businessAreasTicking = false;
        });
        businessAreasTicking = true;
      }
    });

    // Fire and Ice animation for TÉRMICA
    const termicaText = document.getElementById("termica-text");

    const fireColors = ["#ff4500", "#ff4500", "#ff8c00", "#ff4500", "#ff4500"];
    const iceColors = ["#1e90ff", "#1e90ff", "#00bfff", "#1e90ff", "#1e90ff"];

    function animateFireIce() {
      // Start with white text
      gsap.set(termicaText, {
        color: "#ffffff",
        backgroundImage: "none",
        WebkitBackgroundClip: "none",
        backgroundClip: "none",
      });

      // After 1 second, transition to fire
      gsap.delayedCall(1, () => {
        gsap.to(termicaText, {
          backgroundImage: `linear-gradient(90deg, ${fireColors.join(", ")})`,
          backgroundSize: "200% auto",
          WebkitBackgroundClip: "text",
          backgroundClip: "text",
          color: "transparent",
          duration: 1.2,
          ease: "power2.inOut",
          onStart: () => {
            // Animate the fire gradient position
            gsap.to(termicaText, {
              backgroundPosition: "200% 50%",
              duration: 2,
              ease: "sine.inOut",
              repeat: -1,
              yoyo: true,
            });
          },
        });

        // After 3 seconds of fire, slowly fade back to white
        gsap.delayedCall(3, () => {
          gsap.to(termicaText, {
            color: "#ffffff",
            duration: 1.5,
            ease: "power2.inOut",
          });

          // After 1 second of white, transition to ice
          gsap.delayedCall(1, () => {
            gsap.to(termicaText, {
              backgroundImage: `linear-gradient(90deg, ${iceColors.join(", ")})`,
              WebkitBackgroundClip: "text",
              backgroundClip: "text",
              color: "transparent",
              duration: 1.2,
              ease: "power2.inOut",
              onStart: () => {
                // Animate the ice gradient position
                gsap.to(termicaText, {
                  backgroundPosition: "200% 50%",
                  duration: 2,
                  ease: "sine.inOut",
                  repeat: -1,
                  yoyo: true,
                });
              },
            });

            // After 3 seconds of ice, slowly fade back to white
            gsap.delayedCall(3, () => {
              gsap.to(termicaText, {
                color: "#ffffff",
                duration: 1.5,
                ease: "power2.inOut",
                onComplete: () => {
                  // After 1 second of white, restart the cycle
                  gsap.delayedCall(1, animateFireIce);
                },
              });
            });
          });
        });
      });
    }

    animateFireIce();
  });
</script>
