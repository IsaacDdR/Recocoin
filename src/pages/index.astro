---
import IndexLayout from "../layouts/IndexLayout.astro";
import { Image } from "astro:assets";
import cocinaHeader from "../assets/img/cocina-header.jpg";
import rhinoLogo from "../assets/svg/rhino-logo.svg";
import criotecLogo from "../assets/svg/criotec-logo.svg";
import metalfrioLogo from "../assets/svg/metalfrio-logo.svg";
import vencortLogo from "../assets/img/vencort.png";
import loboLogo from "../assets/img/lobo-logo.jpg";
import logo40 from "../assets/img/40-logo.png";
---

<style>
  @keyframes color-shift {
    0% {
      background-position: 20% 50%;
    }
    17% {
      background-position: 23% 47%;
    }
    33% {
      background-position: 41% 53%;
    }
    49% {
      background-position: 65% 48%;
    }
    67% {
      background-position: 87% 52%;
    }
    83% {
      background-position: 70% 55%;
    }
    100% {
      background-position: 20% 50%;
    }
  }

  @keyframes color-shift-reverse {
    0% {
      background-position: 80% 50%;
    }
    19% {
      background-position: 77% 53%;
    }
    37% {
      background-position: 59% 47%;
    }
    53% {
      background-position: 35% 52%;
    }
    71% {
      background-position: 13% 48%;
    }
    89% {
      background-position: 30% 45%;
    }
    100% {
      background-position: 80% 50%;
    }
  }

  @keyframes bg-shift {
    0% {
      background-color: #374151;
    }
    16% {
      background-color: #4b5563;
    }
    32% {
      background-color: #1f2937;
    }
    48% {
      background-color: #374151;
    }
    64% {
      background-color: #111827;
    }
    80% {
      background-color: #1f2937;
    }
    100% {
      background-color: #374151;
    }
  }

  @keyframes border-shift {
    0% {
      border-color: #374151;
    }
    16% {
      border-color: #4b5563;
    }
    32% {
      border-color: #6b7280;
    }
    48% {
      border-color: #9ca3af;
    }
    64% {
      border-color: #374151;
    }
    80% {
      border-color: #4b5563;
    }
    100% {
      border-color: #374151;
    }
  }

  @keyframes button-shimmer {
    0% {
      background-position: -200% center;
    }
    100% {
      background-position: 200% center;
    }
  }

  @keyframes button-pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
    }
  }

  .animate-color-shift {
    background: linear-gradient(
      90deg,
      #1e40af,
      #2563eb,
      #3b82f6,
      #60a5fa,
      #93c5fd,
      #60a5fa,
      #3b82f6,
      #2563eb,
      #1e40af
    );
    background-size: 300% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: color-shift 14s ease-in-out infinite;
    display: inline-block;
  }

  .animate-color-shift-reverse {
    background: linear-gradient(
      90deg,
      #1e40af,
      #2563eb,
      #3b82f6,
      #60a5fa,
      #93c5fd,
      #60a5fa,
      #3b82f6,
      #2563eb,
      #1e40af
    );
    background-size: 300% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: color-shift-reverse 17s ease-in-out infinite;
    display: inline-block;
  }

  .animate-bg-shift {
    animation: bg-shift 6s ease-in-out infinite;
    animation-delay: 1s;
  }

  .animate-border-shift {
    animation: border-shift 7s ease-in-out infinite;
    animation-delay: 1.5s;
  }

  .animate-button-gradient {
    background: linear-gradient(
      90deg,
      #1e40af,
      #2563eb,
      #3b82f6,
      #60a5fa,
      #93c5fd,
      #60a5fa,
      #3b82f6,
      #2563eb,
      #1e40af
    );
    background-size: 300% auto;
    position: relative;
    animation: button-pulse 3s infinite;
  }

  .animate-button-gradient:hover {
    background: #1e40af;
    animation: none;
  }

  .animate-button-gradient::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.15),
      transparent
    );
    background-size: 200% 100%;
    animation: button-shimmer 4s linear infinite;
  }
</style>

<IndexLayout title="Recocoin">
  <main>
    <!--HERO SECTION -->
    <section
      class="relative w-full h-screen flex items-center justify-center bg-cover bg-center"
      style={`background-image: url(${cocinaHeader.src})`}
    >
      <div
        class="absolute inset-0 bg-gradient-to-b from-gray-900/70 via-gray-800/80 to-gray-900/100"
      >
      </div>
      <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
        <h1
          class="text-white font-bold text-5xl sm:text-6xl lg:text-7xl leading-tight mb-8 tracking-tight"
        >
          <span class="animate-color-shift">Infraestructura</span> térmica para la
          <span class="animate-color-shift-reverse">industria</span>
          gastronómica
        </h1>
        <p
          class="text-xl sm:text-2xl font-light text-gray-200 mb-12 max-w-3xl mx-auto leading-relaxed"
        >
          Diseñamos y equipamos cocinas industriales y sistemas de refrigeración
          con precisión, rendimiento y calidad garantizados.
        </p>
        <div
          class="flex flex-col sm:flex-row gap-6 justify-center items-center"
        >
          <button
            type="button"
            class="group relative overflow-hidden animate-button-gradient text-white font-semibold px-8 py-4 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl min-w-[160px]"
          >
            <span class="relative z-10">¡Hablemos!</span>
          </button>
          <button
            type="button"
            class="group relative overflow-hidden bg-transparent border-2 border-gray-400 text-white hover:bg-white hover:text-gray-900 font-semibold px-8 py-4 rounded-full transition-all duration-300 transform hover:scale-105 min-w-[160px]"
          >
            <span class="relative z-10">Ver productos</span>
          </button>
        </div>
      </div>
    </section>

    <!--BENEFICIOS -->
    <section class="text-gray-600 body-font">
      <div class="container px-5 py-12 lg:py-12 mx-auto">
        <!--
        <h1
          class="text-3xl font-medium title-font text-center text-gray-900 mb-20 lg:sm:text-5xl lg:text-4xl lg:font-bold lg:mb-24"
        >
          Beneficios que marcan la diferencia
        </h1>
        -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-y-10 gap-x-8">
          <div class="px-4 py-6 flex lg:px-6 lg:py-6">
            <div
              class="w-12 h-12 inline-flex items-center justify-center rounded-full bg-gray-800 text-gray-300 mb-4 flex-shrink-0 text-xl lg:w-20 lg:h-20 lg:mb-6 lg:text-3xl"
            >
              <svg
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                class="w-6 h-6"
                viewBox="0 0 24 24"
              >
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
              </svg>
            </div>
            <div class="flex-grow pl-6 lg:pl-8">
              <h2
                class="text-gray-900 text-lg title-font font-medium mb-2 lg:text-2xl lg:font-bold lg:mb-4"
              >
                Calidad y Durabilidad:
              </h2>
              <p class="leading-relaxed text-base lg:text-lg">
                Equipos diseñados para un rendimiento eficiente y una larga vida
                útil.
              </p>
            </div>
          </div>
          <div class="px-4 py-6 flex lg:px-6 lg:py-6">
            <div
              class="w-12 h-12 inline-flex items-center justify-center rounded-full bg-gray-800 text-gray-300 mb-4 flex-shrink-0 text-xl lg:w-20 lg:h-20 lg:mb-6 lg:text-3xl"
            >
              <svg
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                class="w-6 h-6"
                viewBox="0 0 24 24"
              >
                <circle cx="6" cy="6" r="3"></circle>
                <circle cx="6" cy="18" r="3"></circle>
                <path d="M20 4L8.12 15.88M14.47 14.48L20 20M8.12 8.12L12 12"
                ></path>
              </svg>
            </div>
            <div class="flex-grow pl-6 lg:pl-8">
              <h2
                class="text-gray-900 text-lg title-font font-medium mb-2 lg:text-2xl lg:font-bold lg:mb-4"
              >
                Asesoría Personalizada:
              </h2>
              <p class="leading-relaxed text-base lg:text-lg">
                Te guiamos en cada paso para que encuentres la mejor solución
                adaptada a tus necesidades.
              </p>
            </div>
          </div>
          <div class="px-4 py-6 flex lg:px-6 lg:py-6">
            <div
              class="w-12 h-12 inline-flex items-center justify-center rounded-full bg-gray-800 text-gray-300 mb-4 flex-shrink-0 text-xl lg:w-20 lg:h-20 lg:mb-6 lg:text-3xl"
            >
              <svg
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                class="w-6 h-6"
                viewBox="0 0 24 24"
              >
                <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
            </div>
            <div class="flex-grow pl-6 lg:pl-8">
              <h2
                class="text-gray-900 text-lg title-font font-medium mb-2 lg:text-2xl lg:font-bold lg:mb-4"
              >
                Garantía:
              </h2>
              <p class="leading-relaxed text-base lg:text-lg">
                Nos aseguramos de que tus equipos funcionen siempre de manera
                óptima, brindándote tranquilidad y respaldo en cada compra.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--INTRO MARCAS -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-5">
        <h2
          class="text-3xl sm:text-4xl font-bold text-center text-gray-900 mb-12"
        >
          Marcas que distribuimos
        </h2>
        <div
          class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-8 items-center justify-items-center"
        >
          <div
            class="w-24 sm:w-32 h-12 sm:h-16 flex items-center justify-center"
          >
            <Image
              src={rhinoLogo}
              alt="Rhino"
              class="w-24 sm:w-32 h-12 sm:h-16"
            />
          </div>
          <div
            class="w-24 sm:w-32 h-12 sm:h-16 flex items-center justify-center"
          >
            <Image
              src={criotecLogo}
              alt="Criotec"
              class="w-24 sm:w-32 h-12 sm:h-16"
            />
          </div>
          <div
            class="w-24 sm:w-32 h-12 sm:h-16 flex items-center justify-center"
          >
            <Image
              src={metalfrioLogo}
              alt="Metalfrio"
              class="w-24 sm:w-32 h-12 sm:h-16"
            />
          </div>
          <div
            class="w-24 sm:w-32 h-12 sm:h-16 flex items-center justify-center"
          >
            <Image
              src={vencortLogo}
              alt="Vencort"
              class="w-24 sm:w-32 h-12 sm:h-16"
            />
          </div>
          <div
            class="w-24 sm:w-32 h-24 sm:h-32 flex items-center justify-center"
          >
            <Image
              src={loboLogo}
              alt="Lobo"
              class="w-24 sm:w-32 h-24 sm:h-32"
            />
          </div>
          <div class="flex items-center justify-center">
            <Image src={logo40} alt="40" class="w-16" />
          </div>
        </div>
      </div>
    </section>
    <!-- CONTENT -->
  </main>
</IndexLayout>
