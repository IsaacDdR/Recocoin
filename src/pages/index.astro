<style>
  @keyframes color-shift {
    0% {
      background-position: 20% 50%;
    }
    17% {
      background-position: 23% 47%;
    }
    33% {
      background-position: 41% 53%;
    }
    49% {
      background-position: 65% 48%;
    }
    67% {
      background-position: 87% 52%;
    }
    83% {
      background-position: 70% 55%;
    }
    100% {
      background-position: 20% 50%;
    }
  }

  @keyframes color-shift-reverse {
    0% {
      background-position: 80% 50%;
    }
    19% {
      background-position: 77% 53%;
    }
    37% {
      background-position: 59% 47%;
    }
    53% {
      background-position: 35% 52%;
    }
    71% {
      background-position: 13% 48%;
    }
    89% {
      background-position: 30% 45%;
    }
    100% {
      background-position: 80% 50%;
    }
  }

  @keyframes bg-shift {
    0% {
      background-color: #374151;
    }
    16% {
      background-color: #4b5563;
    }
    32% {
      background-color: #1f2937;
    }
    48% {
      background-color: #374151;
    }
    64% {
      background-color: #111827;
    }
    80% {
      background-color: #1f2937;
    }
    100% {
      background-color: #374151;
    }
  }

  @keyframes border-shift {
    0% {
      border-color: #374151;
    }
    16% {
      border-color: #4b5563;
    }
    32% {
      border-color: #6b7280;
    }
    48% {
      border-color: #9ca3af;
    }
    64% {
      border-color: #374151;
    }
    80% {
      border-color: #4b5563;
    }
    100% {
      border-color: #374151;
    }
  }

  @keyframes button-shimmer {
    0% {
      background-position: -200% center;
    }
    100% {
      background-position: 200% center;
    }
  }

  @keyframes button-pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      --entrance-offset: 50px;
    }
    to {
      opacity: 1;
      --entrance-offset: 0px;
    }
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @keyframes fire-glow {
    0%,
    100% {
      text-shadow: none;
    }
    50% {
      text-shadow: none;
    }
  }

  @keyframes ice-glow {
    0%,
    100% {
      text-shadow: none;
    }
    50% {
      text-shadow: none;
    }
  }

  @keyframes fire-effect {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 100% 50%;
    }
  }

  @keyframes fire-ice-transition {
    0%,
    100% {
      opacity: 1;
      background-position: 0% 50%;
    }
    45% {
      opacity: 1;
      background-position: 0% 50%;
    }
    50% {
      opacity: 0;
      background-position: 0% 50%;
    }
    55% {
      opacity: 0;
      background-position: 100% 50%;
    }
    60% {
      opacity: 1;
      background-position: 100% 50%;
    }
    95% {
      opacity: 1;
      background-position: 100% 50%;
    }
  }

  .animate-color-shift {
    background: linear-gradient(
      90deg,
      #155e75,
      #0e7490,
      #0891b2,
      #06b6d4,
      #22d3ee,
      #06b6d4,
      #0891b2,
      #0e7490,
      #155e75
    );
    background-size: 300% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: color-shift 8s ease-in-out infinite;
    display: inline-block;
  }

  .animate-color-shift-reverse {
    background: linear-gradient(
      90deg,
      #155e75,
      #0e7490,
      #0891b2,
      #06b6d4,
      #22d3ee,
      #06b6d4,
      #0891b2,
      #0e7490,
      #155e75
    );
    background-size: 300% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: color-shift-reverse 10s ease-in-out infinite;
    display: inline-block;
  }

  .animate-bg-shift {
    animation: bg-shift 6s ease-in-out infinite;
    animation-delay: 1s;
  }

  .animate-border-shift {
    animation: border-shift 7s ease-in-out infinite;
    animation-delay: 1.5s;
  }

  .animate-button-gradient {
    background: linear-gradient(
      90deg,
      #155e75,
      #0e7490,
      #0891b2,
      #06b6d4,
      #22d3ee,
      #06b6d4,
      #0891b2,
      #0e7490,
      #155e75
    );
    background-size: 300% auto;
    position: relative;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06),
      inset 0 2px 4px rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(4px);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .animate-button-gradient:hover {
    background: #155e75;
    animation: none;
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05),
      inset 0 2px 4px rgba(255, 255, 255, 0.2);
    transform: translateY(-1px);
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .animate-button-gradient::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.15),
      transparent
    );
    background-size: 200% 100%;
    animation: button-shimmer 4s linear infinite;
    border-radius: 9999px;
    pointer-events: none;
  }

  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 1s ease-out forwards;
  }

  .animate-fire-effect {
    background: linear-gradient(90deg, #ff4500, #ff8c00, #ff4500, #ff8c00);
    background-size: 200% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: fire-effect 3s linear infinite;
    display: inline-block;
  }

  .animate-fire-ice-transition {
    background: linear-gradient(
      90deg,
      #ff4500,
      #ff8c00,
      #ff4500,
      #ff8c00,
      #1e90ff,
      #00bfff,
      #1e90ff,
      #00bfff
    );
    background-size: 200% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: fire-ice-transition 8s ease-in-out infinite;
    display: inline-block;
  }

  .parallax-bg {
    background-attachment: fixed;
    background-size: cover;
    background-position: center;
  }
  @media (max-width: 640px) {
    .parallax-bg {
      background-attachment: scroll;
    }
  }

  .section-content {
    opacity: 0;
    --entrance-offset: 50px;
    --scroll-offset: 0px;
    transform: translateY(calc(var(--entrance-offset) + var(--scroll-offset)));
    animation: fadeInUp 1s ease-out forwards;
  }

  .section-content.visible {
    animation: fadeInUp 1s ease-out forwards;
  }

  .animated-bg {
    background: linear-gradient(
      120deg,
      #ffffff 0%,
      #f1f5f9 25%,
      #e2e8f0 50%,
      #f1f5f9 75%,
      #ffffff 100%
    );
    background-size: 200% 200%;
    animation: gradient-shift 15s ease infinite;
  }

  .fire-state {
    animation: fire-glow 2s ease-in-out infinite;
  }

  .ice-state {
    animation: ice-glow 2s ease-in-out infinite;
  }
</style>

