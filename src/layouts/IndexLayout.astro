---
import NavBar from "../components/NavBar.vue";
import Footer from "../components/Footer.vue";
import { SEO } from "astro-seo";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO  
      title={title} 
      description="RefrigeraciÃ³n Comercial y Cocinas industriales" 
      canonical="https://recocoind.com.mx" 
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "/og-image.png",
          url: "https://recocoind.com.mx",
        },
        optional: {
          description: "Recocoin",
        },
      }}
    /> 
    <meta charset="UTF-8" />
    <meta name="description" content="Recocoin" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator ?? "Astro"} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- Title is set by the <SEO /> component -->
  </head>
  <body>
    <NavBar client:load/>
    <slot />
    <Footer client:visible/>
  </body>
</html>
<style is:global>
  :root {
    font-family:
      "Inter",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  body {
    background: linear-gradient(
      120deg,
      #ffffff 0%,
      #e2e8f0 25%,
      #94a3b8 50%,
      #e2e8f0 75%,
      #ffffff 100%
    );
    background-size: 200% 200%;
    animation: gradient-shift 15s ease infinite;
    min-height: 100vh;
  }
</style>
